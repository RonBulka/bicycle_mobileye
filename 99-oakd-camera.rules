# udev rules for OAK-D camera
# This file ensures proper permissions for the OAK-D camera

# OAK-D camera (vendor ID 03e7)
SUBSYSTEM=="usb", ATTRS{idVendor}=="03e7", MODE="0666", GROUP="plugdev"

# OAK-D camera serial devices
SUBSYSTEM=="tty", ATTRS{idVendor}=="03e7", MODE="0666", GROUP="plugdev"

# OAK-D camera bulk transfer endpoints
SUBSYSTEM=="usb", ATTRS{idVendor}=="03e7", ATTRS{idProduct}=="*", MODE="0666", GROUP="plugdev"

# Reload udev rules when this file changes
KERNEL=="*", RUN+="/bin/systemctl reload bicycle-mobileye.service"
